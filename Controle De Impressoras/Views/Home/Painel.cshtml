    }

    .gridContainer2 {
        display: grid;
        grid-template-columns: 5fr 5fr 2fr;
        gap: .5rem;
        margin-top: .5rem;
    }

    .gridContainer3 {
        display: grid;
        grid-template-columns: 1fr;
        gap: .5rem;
        margin-top: .5rem;
    }

    .feedback {
        width: 100%;
    }

    .impressora {
        width: 100%;
    }

    .container-capacidade {
        display: flex;
        gap: 5px;
        margin-bottom: 10px;
    }

    .ink-level {
        border: solid 1.5px black;
        width: 1.5rem;
        height: 3rem;
        background-color: #F6F7F8;
        position: relative;
        border-radius: 4px;
    }

    .ink-fill {
        position: absolute;
        bottom: 0;
        width: 100%;
        border-radius: 4px;
    }

    .btn-plus {
        width: 40px;
        height: 40px;
        background-color: #007bff; /* Azul */
        color: white;
        border: none;
        border-radius: 50%; /* Torna o botão redondo */
        font-size: 30px;
        display: flex;
        justify-content: center;
        align-items: center;
        cursor: pointer;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: background-color 0.3s ease;
    }

        /* Efeito ao passar o mouse sobre o botão */
        .btn-plus:hover {
            background-color: #0056b3; /* Azul mais escuro */
        }

    /* Estilo para o ícone de mais */
    .icon {
        font-weight: bold;
    }
</style>

